{
  "name": "@pageboard/client",
  "version": "0.11.0",
  "description": "Pageboard client modules",
  "main": "index.js",
  "files": [
    "packages/**/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pageboard/client.git"
  },
  "author": "Jérémy Lal <kapouer@melix.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pageboard/client/issues"
  },
  "homepage": "https://github.com/pageboard/client#readme",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@pageboard/calendar": "workspace:*",
    "@pageboard/email": "workspace:*",
    "@pageboard/feed": "workspace:*",
    "@pageboard/gallery": "workspace:*",
    "@pageboard/google": "workspace:*",
    "@pageboard/html": "workspace:*",
    "@pageboard/pagecut": "workspace:*",
    "@pageboard/print": "workspace:*",
    "@pageboard/site": "workspace:*",
    "@pageboard/write": "workspace:*"
  },
  "pageboard": true,
  "devDependencies": {
    "@kapouer/eslint-config": "^1.7.5",
    "@kapouer/stylelint-config": "^1.3.0"
  },
  "eslintConfig": {
    "extends": "@kapouer/eslint-config",
    "globals": {
      "Page": true,
      "Pageboard": true,
      "VirtualHTMLElement": true
    },
    "ignorePatterns": [
      "!**/*.js",
      "/packages/*/lib/*",
      "node_modules/",
      "/packages/*/*",
      "!/packages/*/src",
      "!/packages/*/ui",
      "!/packages/*/elements"
    ]
  },
  "stylelint": {
    "extends": "@kapouer/stylelint-config"
  }
}
